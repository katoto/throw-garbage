.tabbar_box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 98rpx;
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
}

.tabbar_box.iphoneX-height {
  padding-bottom: 66rpx;
}

.middle-wrapper {
  position: absolute;
  right: 310rpx;
  bottom: 0;
  background-color: #fff;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border-top: 2rpx solid #f2f2f3;
}

.middle-wrapper.iphoneX-height {
  bottom: 66rpx;
}

.tabbar_nav {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  font-size: 20rpx;
  height: 100%;
  position: relative;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.tabbar_icon {
  width: 54rpx;
  height: 54rpx;
  filter: grayscale(100%);  
}

.special-wrapper {
  position: absolute;
  top: -26rpx;
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  background-color: #fff;
  text-align: center;
  box-sizing: border-box;
  padding: 2rpx;
  z-index: 10;
}

.special-wrapper .tabbar_icon {
  width: 100%;
  height: 100%;
}

.special-text-wrapper {
  width: 150%;
  height: 56rpx;
  position: absolute;
  top: -28rpx;
}

.tabbar_box .tabbar_text {
  font-size: 24rpx;
}

.selected {
  filter: grayscale(0%);  
}