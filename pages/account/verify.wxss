.order_empyt{
  display: flex;
  flex-direction: column;
  align-items:  center ;
  justify-content:  center;
  height: 60vh;
}
.empty_text{
  text-align: center;
  color: #999999;
  font-size: 32rpx;
}
.verify_box{
  width: calc(100% - 60rpx);
  margin:150rpx auto;
  background: #31A043;
  border-radius: 10rpx;
  position: relative;
  font-size: 32rpx;
  color: #ffffff;
  padding: 65rpx 64rpx 50rpx;
  box-sizing: border-box;
  line-height: 1.8;
}
.verify_txt{
  font-size: 32rpx;
}
.verify_icon{
  position: absolute;
  top: -50rpx;
  left: 43rpx;
}
.verify_icon image{
  width: 99rpx;
  height: 93rpx;
}