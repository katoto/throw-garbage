<view class="container">
	<!-- <map id="myMap" show-location markers="{{markers}}" bindmarkertap="aaaa" /> -->
	<form bindsubmit="formSubmit" style="width:100vw">
		<view class="form-item f-sb">
			<view>姓名</view>
			<view class="f-end">
				<input name="name" maxlength="12" type="text" placeholder="请输入您的姓名" style="text-align: right;" />
			</view>
		</view>
		<view class="form-item f-sb">
			<view>选择地址</view>
			<view class="f-end">
				<view class="c_999 f_30" bindtap="onChangeAddress">
					选择地址
				</view>
				<image src="../../images/common/icon_xiala.png" class="xl_icon" mode="widthFix"></image>
			</view>
		</view>

		<view class="form-item">
			<textarea maxlength="60" name="address" placeholder="详细地址：如道路，门牌号，小区，楼栋号，单元室等。" class="gx-textarea h_100" placeholder-style="color:#999999;" value="{{address}}"></textarea>
		</view>
		<view class="form-item f-sb">
			<view>职业</view>
			<view class="f-end">
				<view class="c_999 f_30 f-end">
					<picker mode="selector" name="profession" value="{{zhiye}}" range="{{array}}" bindchange="bindZhiyeChange">
						<view class="picker">
							{{zhiye || '请选择职业'}}
						</view>
					</picker>
				</view>
				<image src="../../images/common/icon_xiala.png" class="xl_icon" mode="widthFix"></image>
			</view>
		</view>
		<view class="form-item f-sb">
			<view>工作证号</view>
			<view class="f-end">
				<input type="text" maxlength="22" name="credential" placeholder="请输入您的工作证号" style="text-align: right;" />
			</view>
		</view>

