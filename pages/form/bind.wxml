		<mp-gallery show="{{galleryShow}}" bindchange="change" binddelete="galleryDelete" bindhide="galleryHide" img-urls="{{imgUrls}}" delete hide-on-click="{{true}}" current="0"></mp-gallery>
		<view class="s_btn_box">
			<button class="submit_btn" formType="submit">提交</button>
		</view>
	</form>
</view>