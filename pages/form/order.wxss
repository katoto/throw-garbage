@import './bind.wxss';

.container{
    width: 100%;
    overflow: hidden; 
}

.flex_4{
  width: calc(100% - 60rpx);
  margin: 30rpx auto;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  color: #31A043;
  font-size: 30rpx;
}
.flex_4 view{
  margin: 10rpx 0;
  padding: 10rpx 0;
  display: block;
}
.topTip{
  background:rgb(72, 72, 88);
  color: #fafafa;
  width: 100vw;
  padding:19rpx 35rpx;
  box-sizing: border-box;
  line-height: 30rpx;
  font-size: 24rpx;
  margin-bottom: 5rpx;
}
.form-inp-txt{
    font-size: 30rpx;
}

.right{
    transform: rotate(-90deg);
}
.inline{
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    max-width: 400rpx;
}
.picker-box{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.new-btn{
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding: 20rpx 30rpx 0;
}
.type-btn{
    width: 160rpx;
    height: 64rpx;
    overflow: hidden;
    background: rgba(49, 160, 67, 0.01);
    border: 1px solid #DADADA;
    border-radius: 32rpx;
    text-align: center;
    box-sizing: border-box;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 17rpx;
}

.type-btn:nth-child(4n) {
    margin-right: 0;
}

.btn-txt{
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 400;
    display: block;
    line-height: 58rpx;
}
.icon-row{
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 16rpx solid rgba(0, 0, 0, 0.2);
  margin-left: 10rpx;
}
.active-btn{
    border: 1px solid #31A043;   
}
.active-btn .btn-txt{
    color: #31A043;
}
.type-dialog{
    width: 690rpx;
    position: absolute;
    left: 50%;
    top: 32%;
    margin-left: -345rpx;
    z-index: 11;
    background-color: #fff;
    text-align: center;
    border-radius: 10rpx;
}
.dialog-top{
  width: 100%;
  height: 87rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  position: relative;
}
.mask{
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background-color: rgba(0, 0, 0, 0.5);
    overflow: hidden;
}
.title{
    font-size: 30rpx;
    line-height: 87rpx;
    font-family: PingFang SC;
    font-weight: 600;
    color: #333333;
}
.c-title{
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: #666666;
    position: absolute;
    right: 22rpx;
    top: 12rpx;
    padding: 10rpx;
}
.dialog-bottom{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 0 60rpx;
    margin-top: 30rpx;
}


.modal_type{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,.3);
    z-index: 99;
}

.modal_type_body{
    width: 690rpx;
    position: fixed;
    background: #fff;
    border-radius: 16rpx;
    transform: translate(-50%,-50%);
    top: 45%;
    left: 50%;
}

.modal_type_title{
    width: 100%;
    height: 120rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 1rpx solid #f2f2f2;
}

.modal_type_title_text{
    font-size: 36rpx;
    font-weight: bold;
}

.modal_type_title_close{
    position: absolute;
    z-index: 9;
    height: 120rpx;
    line-height: 120rpx;
    right: 30rpx;
    font-size: 30rpx;
    color: #666;
}

.modal_content{
    width: 100%;
}

.modal_scroll{
    max-height: 600rpx;
}

.type_list{
    width: 100%;
    height: 140rpx;
    display: flex;
    align-items: center;      
    box-sizing: border-box;
    padding: 0 30rpx 0 20rpx;
    border-bottom: 1rpx solid #f2f2f2;
}

.type_list:last-child{
    border: 0;
}

.type_list_img{
    width: 104rpx;
    height: 104rpx;
    border-radius: 8rpx;
    border: 1rpx solid #31A043;
    box-sizing: border-box;
    padding: 8rpx;
}

.type_list_img  image{
    width: 100%;
    height: 100%;
}

.type_list_center{
    flex: 1;
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    box-sizing: border-box;
}

.type_list_center_text{
    font-size: 30rpx;
    color: #333;
}

.type_list_center_p{
    font-size: 24rpx;
    color: #666;
    margin-left: 10rpx;
}

.type_list_right{
    display: flex;

}

.type_list_btn{
    width: 56rpx;
    height: 66rpx;
    display: flex;
    align-items: center;   
    justify-content: center;
    border: 1rpx solid #f2f2f2;
    border-radius: 8rpx 0px 0px 8rpx;
    color: #31A043;
    font-weight: bold;
    font-size: 40rpx;
}

.type_list_number{
    width: 80rpx;
    display: flex;
    align-items: center;   
    justify-content: center;
    border: 1rpx solid #f2f2f2;
    font-size:24rpx;
    color: #333;    
}

.subtract,.add,.number {
    color: #ccc !important;
}

.modal_btm {
    width: 100%;
    height: 88rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    color: #333;
    border-top: 1rpx solid #f2f2f2;
}
