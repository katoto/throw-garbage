                    京东直营京东直营京东直营京东直营京东直营京东直营
                    京东直营京东直营京东直营京东直营京东直营京东直营
                </view>
                <image class="img-close" bindtap="closeDialog" src="../../../images/member/close.png"></image>
            </view>
        </view>
    </view>
    <mp-half-screen-dialog bindbuttontap="diaCouponClick" show="{{showCoupon}}" title="选择优惠券">
        <view slot="desc" class="half-css">
            <view wx:for="{{couponList}}" wx:key="id" class="line {{activeCouponId === item.id ? 'active' : '' }}" bind:tap="couponChange" data-item="{{item}}">
                <view class="line-lf">
                    <view class="price-unit">¥</view>
                    <view class="price-num">{{item.price || 0}}</view>
                </view>
                <view class="line-rf">
                    <view>
                        <view class="title">{{item.title || ''}}</view>
                        <view class="expiry-time">{{item.time || ''}}</view>
                    </view>
                    <view>
                        <image wx:if="{{activeCouponId === item.id}}" class="icon-ok" src="../../../images/member/vip-month.png" />
                        <view wx:else class="no-select"></view>
                    </view>
                </view>
            </view>
        </view>
        <view slot="footer" class="half-footer">
            确定
        </view>
    </mp-half-screen-dialog>
