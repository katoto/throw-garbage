page{
  background: #F2F2F2;
}
.user_box{
  width: 100vw;
  background: #fff;
  padding: 50rpx 30rpx 80rpx;
  box-sizing: border-box;
}
.user-info-box{
  width: calc(100vw - 60rpx);
  margin-top: 32rpx auto 0;
  display: flex;
  flex-direction: column;
  justify-content:center;
 
}
.user-info{
 display: flex;
 flex-direction: row;
 justify-content:start;
}
.user-info .avatar{
  width: 96rpx;
  height: 96rpx;
  background: #FFFFFF;
  border-radius: 50%;
  overflow: hidden;
  border: 1rpx solid #DADADA;
}
.user-info .nickname{
  font-size: 36rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  color: #31A043;
}
.act_list_box{
  width: 100vw;
  box-sizing: border-box;
  padding-top: 20rpx;
}
.act_item{
  background: #fff;
  display: flex;
  justify-content: start;
  align-items: center;
  padding: 0 40rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #f1f1f1;
}

.act_list_box .act_item:last-child {
  border-bottom: 0;
}

.act_l_img{
 margin-right:20rpx;
display: inline-flex;
align-items: center;
}
.act_l_img image{
  width: 38rpx;
  height: 38rpx;
}
.act_text{
  font-size: 29rpx;
}
.act_version{
  flex: 1;
  text-align: right;
  box-sizing: border-box;
  padding-right: 20rpx;
  color: #999;
}

.user-headimg{
    display: block;
    height: 96rpx;
    width:96rpx
}

.version{
  color: #333;
}