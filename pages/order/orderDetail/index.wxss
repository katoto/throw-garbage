.order{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.order_top{
  width: 100%;
  border-radius: 16rpx;
  background: #fff;
  box-shadow: 0px 3px 6px 0px rgba(0, 0, 0, 0.08);
}

.order_top_title{
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  padding-left: 24rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #DADADA;
}

.order_top_icon{
  width: 8rpx;
  height: 24rpx;
  background: #31A043;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.order_top_text{
  font-size: 28rpx;
  color: #333;
}

.order_top_ul{
  width: 100%;
  padding: 0 40rpx 40rpx;
  box-sizing: border-box;
}

.order_top_list{
  color: #333;
  display: flex;
  font-size: 28rpx;
  margin-top: 40rpx;
}


.order_top_list_name{
  width: 160rpx;
}

.order_top_list_text{
  flex: 1;
}

.order_detail{
  width: 100%;
  margin-top: 16rpx;
  border-radius: 16rpx;
  background: #fff;
  overflow: hidden;
  box-shadow: 0px 3rpx 6rpx 0px rgba(0, 0, 0, 0.08);
}

.order_detail_lable{
  display: flex;
  flex-wrap: wrap;
  background: #f2f2f2;
}

.order_detail_list{
  width: 168rpx;
  height: 122rpx;
  margin-right: 6rpx;
  margin-top: 6rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 0;
  box-sizing: border-box;
}

.order_detail_list:nth-child(4n){
  margin-right: 0;
}

.order_detail_list:nth-child(1),
.order_detail_list:nth-child(2),
.order_detail_list:nth-child(3),
.order_detail_list:nth-child(4){
  margin-top: 0;
}

.order_detail_list_name{
  color: #31A043;
  font-size: 28rpx;
}

.order_detail_list_num{
  color: #999;
  font-size: 24rpx;
}

