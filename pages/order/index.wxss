.pmd_box{
  width: calc(100vw - 100rpx);
  margin: 0 auto;
  background: #EFFDF1;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
}
.pmd_list_box{
  width: calc(100% - 160rpx);
  height: 70rpx;
  line-height: 70rpx;
  position: relative;
  overflow: hidden;
  font-size: 28rpx;
}
.pmd_list{
  position: absolute;
  white-space: nowrap;
  animation: geiwogun 12s linear infinite;
}
.pmd_item{
  padding-right: 20rpx;
}

@keyframes geiwogun {
  from {
    transform: translate(0, 0);
  }
  to {
    transform: translate(-50%, 0);
  }
}

.home_act_box{
  width: calc(100vw - 140rpx);
  margin: 0 auto;
}
.home_act_btn_box{
  display: flex;
  justify-content: space-between;
  margin-top:36rpx;
}
.home_act_btn_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  text-align: center;
}
.home_act_btn_item image{
  width:72rpx;
  height: 72rpx;
}
.home_act_btn_item text{
  display: block;
  font-size: 28rpx;
  margin-top: 10rpx;
}
