page{
  background: #FFFFFF;
  padding-bottom: 100rpx;
}

.user-info-box{
  width: calc(100vw - 60rpx);
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content:center;
}
.user-info{
 display: flex;
 flex-direction: row;
 justify-content:start;
}
.user-info .avatar{
  width: 96rpx;
  height: 96rpx;
  background: #FFFFFF;
  border-radius: 50%;
  overflow: hidden;

  border: 1rpx solid #DADADA;
}
.user-info .nickname{
    font-size: 38rpx;
    margin-top: 20rpx;
    margin-left: 20rpx;
    color: #31A043;
    font-family: PingFang SC;
}

.select-btn-box{
  width: 100vw;
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}
.select-btn-box .type-btn{
  padding: 0;
  margin: 0;
  height: 75rpx;
  line-height: 75rpx;
  border-radius: 75rpx;
  width: 40vw;
  text-align: center;
  font-size: 28rpx;
  border:#aaaaaa 1rpx solid;
  color:#57C068;
}

.select-btn-box .type-btn.on{
  border:#57C068 1rpx solid;
  color:#ffffff;
  background-color: #57C068;
}
.roll-ad-box-list{
  margin-top: 30rpx;
  border-top:1rpx solid #e9e9e9;
  padding-top: 20rpx;
}
.roll-ad-box{
  height: 90rpx;
  line-height: 90rpx;
  width: calc(100vw - 60rpx);
  overflow: hidden;
  display: flex;
  justify-content:start;
  align-items:center;
}

.roll-ad-box  .roll-ad-text{
  display: inline-block;
  white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
}

.roll-ad-box .roll-ad-img{
  width: 240rpx;
  height: 80rpx;
  display: inline-block;
  position: relative;
}
.roll-ad-box .roll-ad-img::after{
  content: " ";
  width: 2rpx;
  background: #e9e9e9;
  height: 60rpx;
  position: absolute;
  top: 10rpx;
}

.roll-ad-box .roll-ad-img image{
  width: 100%;
  height: 100%;
}

.roll-ad-box .roll-ad-img ~ .roll-ad-text{
  display: inline-block;
  width: calc(100% - 270rpx);
  margin-left: 20rpx;
}

.datanum-box{
  width: calc(100% - 60rpx);
  margin: 36rpx auto 0 auto;
  height: 320rpx;
  background: linear-gradient(-40deg, #31A043, #57C068);
  border: 1px solid #DADADA;
  box-shadow: 0px 4rpx 35rpx 0px rgba(49, 160, 67, 0.43);
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.datanum-box .datanum-item{
  width: 30%;
  display: flex;
  flex-direction: column;
  color: #ffffff;
  justify-content: center;
}
.datanum-box .datanum-item .datanum-item-icon{
  width: 66rpx;
  height: 66rpx;
  display: inline-flex;
}
.a-center{
  text-align: center;
  margin:15rpx 0;
}
.datanum-desc{
  font-size: 28rpx;
}
.datanum-money{
  font-size: 38rpx;
}
.text-r{
  color: #DA3A20;
}

.f-24{
  font-size: 24rpx;
}
.add-btn{
  width: 209rpx;
  height: 209rpx;
  position: absolute;
  bottom: 0;
}
.video-box{
  /* width: calc(100% - 10px); */
