.complain{
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
}

page {
  background: #f2f2f2;
}

.complain_list{
  width: 100%;
  box-shadow: 0px 6rpx 6rpx rgba(20, 45, 101, 0.1);
  border-radius: 16rpx;
  background: #fff;
  margin-bottom: 24rpx;
}

.complain_title{
  width: 100% !important;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  padding: 0 24rpx;
  align-items: center;
}

.complain_title_time{
  color: rgba(0, 0, 0, 0.6);
  font-size:24rpx;
  text-align: left;
  flex: 1;
}

.complain_title_text{
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.8);
  margin-right: 4rpx;
}

.complain_title_icon{
  width: 32rpx;
  height: 32rpx;
}

.complain_body{
  width: 100%;
  height: 168rpx;
  display: flex;
  flex-direction: column;
  padding: 30rpx 24rpx;
  box-sizing: border-box;
  justify-content: space-between;
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
}

.complain_body_flex{
  display: flex;
  height: 32rpx;
  align-items: center;
}

.complain_body_icon{
  width: 32rpx;
  height: 32rpx;
}

.complain_body_icon image{
  width: 100%;
  height: 100%;
}

.complain_body_name{
  color: rgba(0, 0, 0, 0.8);
  font-size: 28rpx;
  margin: 0 16rpx;
}

.complain_body_text{
  color: rgba(0, 0, 0, 0.6);
  font-size: 28rpx;
  flex: 1;
  text-align: right;
}

.complain_lable{
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.complain_lable_text{
  color: rgba(0, 0, 0, 0.8);
  font-size: 24rpx;
  margin-right: 24rpx;
}

.complain_lable_list{
  padding: 0 16rpx;
  box-sizing: border-box;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #E62222;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #E62222;
  margin-right: 16rpx;
}

.complain_remark{
  width: 100%;
  padding: 0 24rpx 24rpx;
  box-sizing: border-box;
  color: rgba(0, 0, 0, 0.6);
  font-size: 24rpx;
}

.complain_remark_text{
  background: rgba(0, 0, 0, 0.02);
  padding:  24rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}