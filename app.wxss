page{
  background: #ffffff;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
  padding: 0;
  line-height: 1.4;
  border-radius: 4px;
  font-weight: 400;
  font-size: 17px;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.fl_c{
  display: flex;
  justify-content: center;
  align-items: center;
}
.mb_20{
  margin-bottom: 20rpx;
}

.video-box{
  width: calc(100% - 10px);
  margin:54rpx 0;
}
.video-box video{
	width:100%;
	height:60vw;
	margin-bottom:24rpx;
}

.submit_btn{
  width: 492rpx;
height: 112rpx;
background: #31A043;
box-shadow: 0px 5rpx 51rpx 0px rgba(49, 160, 67, 0.28);
border-radius: 56rpx;
text-align: center;
line-height: 112rpx;
font-size: 32rpx;
color: #ffffff;
font-weight: 400;
margin: 0 auto;
padding: 0;
}

.login-btn{
  padding: 0;
  margin:0 ;
  margin-top: 50rpx;
  width: 492rpx;
  height: 112rpx;
  font-size: 32rpx;
  font-weight: 400;
  border-radius: 56rpx;
  line-height: 112rpx;
  box-sizing: content-box;
  background: #35c91d;
  box-shadow: 0px 5rpx 51rpx 0rpx rgba(49, 160, 67, 0.28);
  color: #fff;
}

navbar ~ .container{
  padding-bottom: 120rpx;
}